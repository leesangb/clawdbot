# Dokploy Environment Variables
# Copy this content to Dokploy's Environment tab

# =============================================================================
# REQUIRED
# =============================================================================

# Gateway authentication token (generate with: openssl rand -hex 32)
CLAWDBOT_GATEWAY_TOKEN=your_gateway_token_here

# =============================================================================
# AI PROVIDER CREDENTIALS (at least one required)
# =============================================================================

# Anthropic API Key (recommended)
ANTHROPIC_API_KEY=

# OpenAI API Key (optional)
OPENAI_API_KEY=

# Claude Web Session (alternative to API key)
CLAUDE_AI_SESSION_KEY=
CLAUDE_WEB_SESSION_KEY=
CLAUDE_WEB_COOKIE=

# =============================================================================
# OPTIONAL: MESSAGING CHANNELS
# =============================================================================

# Telegram Bot Token
TELEGRAM_BOT_TOKEN=

# Discord Bot Token
DISCORD_BOT_TOKEN=

# WhatsApp (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=
